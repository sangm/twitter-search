{
  "name": "twitter-search",
  "version": "1.0.0",
  "description": "Twitter Search built with Elasticsearch",
  "main": "lib/app.js",
  "scripts": {
    "airbnb": "echo 'jscs currently does not support esnext well :(' && jscs -v -e -c airbnb.json lib/**/*.js",
    "lint": "jsxhint -c .jshintrc lib/**/*",
    "bundle": "browserify --debug lib/app.js > build/bundle.js",
    "start": "npm run lint & npm run bundle",
    "watch": "watchify --debug lib/app.js -o build/bundle.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sangm/twitter-search.git"
  },
  "keywords": [
    "javascript",
    "react",
    "flux",
    "immutability",
    "es6"
  ],
  "author": "Sang Mercado <sang.mercado@gmail.com> (http://sangm.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sangm/twitter-search/issues"
  },
  "homepage": "https://github.com/sangm/twitter-search",
  "dependencies": {
    "browserify": "^8.1.1",
    "elasticsearch": "^3.1.3",
    "es6-promise": "^2.0.1",
    "flux": "^2.0.1",
    "immutable": "^3.6.2",
    "react": "^0.12.2",
    "react-router": "^0.11.6",
    "superagent": "^0.21.0"
  },
  "devDependencies": {
    "babelify": "^5.0.3",
    "jsxhint": "^0.9.0",
    "uglify": "^0.1.1",
    "watchify": "^2.3.0"
  },
  "jest": {
    "rootDir": "./lib"
  },
  "browserify": {
    "transform": [
      "babelify",
      "reactify"
    ]
  }
}
